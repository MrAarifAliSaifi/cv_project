<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ct_image"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/rounded_corner_background_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ct_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extra_bold"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/iv_ct_image"
        app:layout_constraintStart_toStartOf="@id/iv_ct_image"
        app:layout_constraintTop_toBottomOf="@id/iv_ct_image" />

    <View
        android:id="@+id/indicator_view"
        android:layout_width="@dimen/_3sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:background="@color/green_08713E"
        app:layout_constraintBottom_toBottomOf="@id/iv_ct_image"
        app:layout_constraintStart_toEndOf="@id/iv_ct_image"
        app:layout_constraintTop_toTopOf="@id/iv_ct_image" />

</androidx.constraintlayout.widget.ConstraintLayout>